<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ig2i.pocketbudget">

    <application
        android:name=".GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/dashboard">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Categories"
            android:label="@string/categories" />
        <activity
            android:name=".activity.Earnings"
            android:label="@string/earnings" />
        <activity
            android:name=".activity.CategorySpendings"
            android:label="@string/categorySpendings" />
        <activity
            android:name=".activity.AddCategory"
            android:label="@string/newCategory" />
        <activity
            android:name=".activity.AddEarning"
            android:label="@string/newEarning" />
        <activity
            android:name=".activity.AddSpending"
            android:label="@string/newSpending" />
        <activity
            android:name=".activity.AddItem"
            android:label="@string/newItem" />
        <activity android:name=".activity.Welcome"></activity>
    </application>

</manifest>
