<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViews"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activity.MainActivity">



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/balance"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:background="@color/eucalyptus">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balance_text"
                                android:layout_alignParentTop="true"
                                android:textSize="20sp"
                                android:textColor="#FFFFFF"
                                android:text="Solde"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balance_amount"
                                android:layout_below="@+id/balance_text"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#FFFFFF"
                                android:text="5000€"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/budget"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:background="@color/spanishCrimson">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/budget_text"
                                android:layout_alignParentTop="true"
                                android:textSize="20sp"
                                android:textColor="#FFFFFF"
                                android:text="Budget"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/budget_amount"
                                android:layout_below="@+id/budget_text"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#FFFFFF"
                                android:text="5000€"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv2"
                    android:layout_below="@+id/cv1"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/earning"
                            android:padding="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="2dp"
                            android:background="@color/darkOrange">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/earning_text"
                                android:layout_alignParentTop="true"
                                android:textSize="20sp"
                                android:text="Revenus"
                                android:textColor="#FFFFFF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/earning_amount"
                                android:layout_below="@+id/earning_text"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:text="5000€"
                                android:textColor="#FFFFFF"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/spending"
                            android:padding="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@color/spiroDiscoBall">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spending_text"
                                android:layout_alignParentTop="true"
                                android:textSize="20sp"
                                android:text="Dépenses"
                                android:textColor="#FFFFFF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spending_amount"
                                android:layout_below="@+id/spending_text"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:text="5000€"
                                android:textColor="#FFFFFF"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_below="@+id/cv2"
                    android:layout_marginTop="15dp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_below="@+id/pie_chart"
                    android:layout_marginTop="15dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_below="@+id/bar_chart"
                    android:layout_marginTop="15dp"  />


            </RelativeLayout>
        </ScrollView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/add_button"
            android:src="@drawable/ic_add_circle_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"/>

    </RelativeLayout>
